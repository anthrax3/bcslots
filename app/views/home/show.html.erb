<script type="text/javascript">
        function getIdFromCookie() {
          return $.cookie('id');
        };

        function getCSRFToken() {
          return '<%= form_authenticity_token %>';
        }

        function balance_in_dBTC() {
          return <%= @data[:balance_in_dBTC] %>;
        };

        function balance_in_cBTC() {
          return <%= @data[:balance_in_cBTC] %>;
        };

        function balance_in_mBTC() {
          return <%= @data[:balance_in_mBTC] %>;
        };

	var flashvars = {
                config_file: "<%= asset_path 'slot_machine_config.xml' %>"
	};

	var params = {
		align: "default",
		wmode: "transparent",
		menu: "false",
		scale: "noscale"
	};

	var attributes = {
		id: "swf_content",
		name: "swf_content"
	};

        swfobject.embedSWF("<%= asset_path 'slot_machine.swf' %>", "flashcontent", "100%", "100%", "8.0.0", false, flashvars, params, attributes);

</script>
</head>
